<?xml version="1.0" encoding="UTF-8"?>
<database name="default" namespace="UserBundle\Model" defaultIdMethod="native">

    <table name="users">
        <column name="id" type="integer" primaryKey="true" autoIncrement="true" />
        <column name="first_name" type="varchar" required="true" size="100" />
        <column name="last_name" type="varchar" required="true" size="100" />
	<column name="school_name" type="varchar" required="true" size="100" />
	<column name="college_name" type="varchar" required="true" size="100" />
	<column name="blood_group" type="varchar" required="true" size="10" />
	<column name="gender" type="varchar" required="true" size="15" />
        <column name="date_of_birth" type="DATE" required="true" />
        
    </table>

    <table name="userDetails">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
	<column name="user_id" type="integer" />
	<foreign-key foreignTable="users">
            <reference local="user_id" foreign="id" />
        </foreign-key>
        <column name="email_id" type="varchar" size="100" required="true" />
        <column name="mobile_no" type="varchar" size="100" required="true" />
    </table>

</database>
